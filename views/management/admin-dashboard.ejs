<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bolbuk Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark px-4">
    <a class="navbar-brand fw-bold text-white" href="/management">Bolbuk Foods</a>
  </nav>

  <!-- Jumbotron -->
  <div class="p-5 mb-4 bg-light rounded-3 text-center">
    <h1 class="display-6 fw-bold">Admin Dashboard</h1>
    <p class="lead">Manage all your products easily</p>
    <a href="/management/create-product" class="btn btn-primary">+ Create New Product</a>
  </div>

  <div class="container">
    <div class="row g-4">
      <% products.forEach(product => { %>
        <div class="col-md-4">
          <div class="card shadow-sm">
            <% if (product.image) { %>
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <% } else { %>
              <img src="https://via.placeholder.com/400x250?text=No+Image" class="card-img-top">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text text-muted">â‚¦<%= product.price %></p>
              <p class="small"><%= product.category %></p>
              <div class="d-flex justify-content-between">
                <a href="/management/<%= product._id %>" class="btn btn-sm btn-outline-primary">View/Edit</a>
                <form action="/management/<%= product._id %>/delete" method="POST">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>