  <!-- Payment Section -->
  <!-- Breadcrumb Section Begin -->
 

    <div class="card-body">
      <div class="row">
        <!-- Payment Form -->
        <div class="col-md-7">
          <div class="left border p-4">
            <div class="row mb-3">
              <span class="header"></span>
              <div class="icons ms-auto">
                <img src="https://img.icons8.com/color/48/000000/visa.png" />
                <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" />
                <img src="https://img.icons8.com/color/48/000000/maestro.png" />
              </div>
            </div>

            <form action="/products/charge" method="post" id="payment-form">
              <div class="form-row mb-3">
                <label for="card-element">Credit or debit card</label>
                <div id="card-element" class="my-2"></div>
                <div id="card-errors" role="alert" class="text-danger"></div>
              </div>

              <div class="form-group">
                <label>Shipping Address:</label>
                <input placeholder="Enter Your Address" name="address" required>
                <input type="hidden" value="<%= totalPrice %>" name="amount">
              </div>

              <button class="btn btn-primary">Submit Payment</button>
            </form>
          </div>
        </div>

       <!-- Order Summary -->
<div class="col-md-5">
  <div class="right border p-4">
    <div class="header mb-3">Order Summary</div>

    <% if (products.length > 0) { %>
      <% products.forEach(function(product){ %>
        <div class="row item mb-3">
          <div class="col-4 align-self-center">
            <img class="img-fluid rounded" 
                 src="<%= product.item.image %>" 
                 alt="<%= product.item.name %>">
          </div>
          <div class="col-8">
            <div class="row"><b>£<%= product.item.price.toFixed(2) %></b></div>
            <div class="row text-muted"><%= product.item.name %></div>
            <div class="row">Qty: <%= product.qty %></div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No items in your cart.</p>
    <% } %>

    <hr>
    <div class="row lower">
      <div class="col text-left">Subtotal</div>
      <div class="col text-right">£<%= totalPrice.toFixed(2) %></div>
    </div>
    <div class="row lower">
      <div class="col text-left">Delivery</div>
      <div class="col text-right">Free</div>
    </div>
    <div class="row lower">
      <div class="col text-left"><b>Total to pay</b></div>
      <div class="col text-right"><b>£<%= totalPrice.toFixed(2) %></b></div>
    </div>
  </div>
</div>




